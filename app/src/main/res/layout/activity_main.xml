<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_book1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="4dp"
        android:background="@color/white1"
      >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/b_1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="أرض زيكولا"
                android:textColor="#1b1a1a"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btn_view_book1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:text="مشاهدة"
                android:layout_marginTop="10dp"
                android:textColor="@color/white" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_book2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="4dp"
        android:background="@color/white1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/b_2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="أماريتا أرض زيكولا"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="#1b1a1a"
                android:textStyle="bold"
                android:layout_gravity="center" />

            <Button
                android:id="@+id/btn_view_book2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="مشاهدة"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_background"
                android:textColor="@color/white"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_book3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="4dp"
        android:background="@color/white1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/b_3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="وادي الذئاب المنسية - أرض زيكولا"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="#1b1a1a"
                android:textStyle="bold"
                android:layout_gravity="center"
                />

            <Button
                android:id="@+id/btn_view_book3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="مشاهدة"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_background"
                android:textColor="@color/white"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_info"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background"
        android:text="معلومات"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:textColor="@color/white" />

</LinearLayout>
</ScrollView>